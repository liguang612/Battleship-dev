<AnchorPane id="home_screen" fx:id="homeScreen" prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: #B0C4DE;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Battleship.HomeController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="500.0" layoutY="1.0">
         <image>
            <Image url="@Image/background.png" />
         </image>
      </ImageView>
      <Button id="play_btn" fx:id="playButton" alignment="CENTER" layoutX="151.0" layoutY="326.0" mnemonicParsing="false" onAction="#switchToScene2" prefHeight="66.0" prefWidth="189.0" style="-fx-background-color: #F99A30; -fx-font-weight: bold;" text="PLAY" textFill="WHITE">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button id="score_btn" fx:id="scoreButton" alignment="CENTER" layoutX="155.0" layoutY="421.0" mnemonicParsing="false" onAction="#showHighScore" prefHeight="66.0" prefWidth="190.0" style="-fx-background-color: #F99A30; -fx-font-weight: bold;" text="HIGH SCORE" textFill="WHITE">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button id="exit_btn" fx:id="exitButton" alignment="CENTER" layoutX="153.0" layoutY="519.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="66.0" prefWidth="190.0" style="-fx-background-color: #F99A30; -fx-font-weight: bold;" text="EXIT" textFill="WHITE">
